<%  driverData.forEach(function(el, index) { %>

  <article data-aos="zoom-in-up" class="admin-driver">
    <img src="/img/driver_<%= index %>.png" alt="driver: <%= el.driver_name %>">
    <h3><%= el.driver_name %></h3>
    <form action="/driverdata/<%- el.driver_name %>">
      <label for="position">Position</label>
      <input type="text" id="position" name="position" value="<%= el.position %>"><br>
      <label for="tyre">Current tyre</label>
      <input type="text" id="tyre" name="tyre" value="<%= el.tyre %>"><br>
      <label for="lap">Last lap time</label>
      <input type="text" id="lap" name="lap" value="<%= el.lap_time %>"><br>
      <input type="submit" value="Submit">
    </form>
  </article>

<% });%>

